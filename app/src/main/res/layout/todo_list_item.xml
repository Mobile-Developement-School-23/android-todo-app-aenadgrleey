<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dragged_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?colorSurface"
    android:minHeight="64dp">

    <FrameLayout
        android:id="@+id/complete_indicator_holder"
        android:layout_width="52dp"
        android:layout_height="48dp"
        app:layout_constraintBaseline_toBaselineOf="@id/body"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/complete_indicator"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:tint="?colorOutlineVariant"
            app:srcCompat="@drawable/round_check_circle_outline_24" />

    </FrameLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="@string/lorem_ipsum"
        android:textAppearance="?attr/textAppearanceTitleLarge"
        android:textColor="?colorOnSurfaceVariant"
        app:layout_constraintBottom_toTopOf="@id/deadline"
        app:layout_constraintEnd_toStartOf="@id/more_button_holder"
        app:layout_constraintStart_toEndOf="@+id/complete_indicator_holder"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/deadline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="13dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/deadline"
        android:textAppearance="?attr/textAppearanceLabelMedium"
        android:textColor="?colorOnSurfaceVariant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/more_button_holder"
        app:layout_constraintStart_toEndOf="@+id/complete_indicator_holder"
        app:layout_constraintTop_toBottomOf="@id/body"

        app:layout_constraintVertical_chainStyle="packed" />

    <FrameLayout
        android:id="@+id/more_button_holder"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="16dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/more_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:tint="?colorOutlineVariant"
            app:srcCompat="@drawable/round_more_horiz_24" />

    </FrameLayout>


    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
