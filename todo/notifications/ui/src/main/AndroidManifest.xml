<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.SCHEDULE_EXACT_ALARM" />

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application>
        <receiver
            android:name="com.aenadgrleey.todonotify.ui.notification.TaskDeadlineNotificator"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.aenadgrleey.SEND_TODO" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="com.aenadgrleey.todonotify.ui.notification.ImportantTaskDeadlineWarningNotificator"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.aenadgrleey.WARN_ABOUT_IMPORTANT" />
            </intent-filter>
        </receiver>
    </application>


</manifest>